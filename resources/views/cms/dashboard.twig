{% extends 'layout/base.twig' %}

{% block title %}Dashboard | LWPHP CMS{% endblock %}

{% block extra_css %}
.dashboard-grid {
    display: grid;
    grid-template-columns: 260px 1fr;
    gap: 2.5rem;
    margin-top: 2rem;
    align-items: start;
}

.sidebar {
    position: sticky;
    top: 2rem;
}

.user-profile {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--glass-border);
}

.avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary), var(--accent));
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
    color: white;
    box-shadow: 0 4px 15px rgba(79, 70, 229, 0.4);
}

.sidebar-nav {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.sidebar-nav a {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.8rem 1rem;
    color: var(--text-muted);
    text-decoration: none;
    border-radius: 10px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-weight: 500;
}

.sidebar-nav a svg {
    width: 20px;
    height: 20px;
    opacity: 0.7;
    transition: opacity 0.3s;
}

.sidebar-nav a:hover, .sidebar-nav a.active {
    background: rgba(79, 70, 229, 0.15);
    color: var(--text-main);
    transform: translateX(4px);
}

.sidebar-nav a:hover svg, .sidebar-nav a.active svg {
    opacity: 1;
    color: var(--primary);
}

.stats-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2.5rem;
}

.stat-card {
    padding: 1.5rem;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
}

.stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.5);
    border-color: rgba(79, 70, 229, 0.4);
}

.stat-card::before {
    content: '';
    position: absolute;
    top: 0; left: 0; width: 100%; height: 4px;
    background: linear-gradient(90deg, var(--primary), var(--accent));
    opacity: 0;
    transition: opacity 0.3s;
}

.stat-card:hover::before {
    opacity: 1;
}

.stat-icon {
    position: absolute;
    right: 1.5rem;
    top: 1.5rem;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: rgba(79, 70, 229, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
}

.stat-card h4 {
    color: var(--text-muted);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
}

.stat-card .value {
    font-size: 2.25rem;
    font-family: 'Outfit', sans-serif;
    font-weight: 700;
    color: var(--text-main);
}

.stat-trend {
    font-size: 0.85rem;
    color: var(--accent);
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.5rem;
}

.generator-section {
    padding: 2.5rem;
    border-radius: 16px;
    background: linear-gradient(145deg, rgba(23, 27, 34, 0.8), rgba(15, 17, 21, 0.9));
    position: relative;
    overflow: hidden;
}

.generator-section::after {
    content: '';
    position: absolute;
    right: -50px;
    top: -50px;
    width: 200px;
    height: 200px;
    background: var(--primary-glow);
    filter: blur(50px);
    border-radius: 50%;
    pointer-events: none;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-muted);
    font-weight: 500;
}

.form-control {
    background: rgba(0,0,0,0.2) !important;
    border: 1px solid rgba(255,255,255,0.1) !important;
    color: white !important;
    padding: 0.85rem 1rem !important;
    border-radius: 10px !important;
    font-family: 'Inter', sans-serif;
    transition: border-color 0.3s, box-shadow 0.3s;
}

.form-control:focus {
    outline: none;
    border-color: var(--primary) !important;
    box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.25);
}

.btn-group {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary), #818cf8) !important;
    box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
    border: none !important;
}

.btn-accent {
    background: linear-gradient(135deg, var(--accent), #34d399) !important;
    box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
    border: none !important;
}

.console-output {
    background: #09090b;
    color: #10b981;
    font-family: 'Fira Code', 'Courier New', monospace;
    padding: 1.25rem;
    border-radius: 10px;
    margin-top: 2rem;
    font-size: 0.85rem;
    min-height: 120px;
    max-height: 300px;
    overflow-y: auto;
    border: 1px solid rgba(255,255,255,0.05);
    box-shadow: inset 0 2px 10px rgba(0,0,0,0.5);
}

.console-output::-webkit-scrollbar {
    width: 6px;
}
.console-output::-webkit-scrollbar-thumb {
    background: rgba(255,255,255,0.2);
    border-radius: 3px;
}
{% endblock %}


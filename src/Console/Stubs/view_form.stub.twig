{# phpcs:disable #}
<div class="fixed inset-0 bg-black/70 backdrop-blur-sm flex justify-center items-center z-50">
    <div class="bg-gray-800 rounded-xl shadow-2xl border border-gray-700 w-full max-w-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-700 flex justify-between items-center">
            <h2 class="text-xl font-semibold text-white">{% if item %}Edit{% else %}Create{% endif %} {{ className }}</h2>
            <button onclick="document.getElementById('form-modal').innerHTML=''" class="text-gray-400 hover:text-white">&times;</button>
        </div>
        
        <form hx-{% if item %}put{% else %}post{% endif %}="/{{ resourceNameLower }}s{% if item %}/{{ item.id }}{% endif %}" 
              hx-target="body" 
              class="p-6 space-y-4">
            
            {% if item %}
            <input type="hidden" name="id" value="{{ item.id }}">
            {% endif %}

            <!-- Form Fields -->
            <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">Example Field</label>
                <input type="text" name="example" value="{{ item.example ?? '' }}" 
                       class="w-full bg-gray-900 border border-gray-600 rounded-lg px-4 py-2 text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
            </div>

            <div class="pt-4 flex justify-end space-x-3">
                <button type="button" onclick="document.getElementById('form-modal').innerHTML=''" class="px-5 py-2 text-sm text-gray-300 hover:text-white font-medium">Cancel</button>
                <button type="submit" class="bg-blue-600 hover:bg-blue-500 text-white px-5 py-2 rounded-lg font-medium shadow transition-colors">Save {{ className }}</button>
            </div>
        </form>
    </div>
</div>
